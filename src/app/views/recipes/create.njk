<!DOCTYPE html>
<html>
  <head>

    
    <title>Foodfy - Nova receita</title>
    
    {% block header %}
      <link href="https://fonts.googleapis.com/css?family=Roboto+Mono&display=swap" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="/css/admin.css">
    {% endblock %}
  </head>

  <body>
    <header>
        <a href="/" id="foodfyy">Foodfy</a>
        <a href="/" id="sair">Sair</a>
    </header>

    <form class="card-recipe" method="POST" action="/admin/recipes" >
      <section class="avatar" style="background: url(https://source.unsplash.com/collection/4878233/600x600) no-repeat center / cover"></section>
      <section class="details"> 

        <div class="item">
          <div>Imagem da receita</div>
          <div>
            <input type="text" name="image" placeholder="http://" value="{{ dessert.image }}">
          </div>
        </div>

        <div class="item">
          <div>Nome da receita</div>
          <div>
            <input type="text" name="title"value="{{ dessert.title }}" placeholder="Informe o nome">
          </div>
        </div>

        {# <div class="item">
          <div>Autor da receita</div>
          <div>
            <select name="chef">
              {% for chef in chefOptions %}
              <option value="{{ chef.id }}">
              {{ chef.name }}
              </option>
              {% endfor %}
            </select>
          </div>
        </div> #}

        <div class="item">
          <div>Ingredientes</div>
          <div id="ingredients">
            <div id="ingredientes" class="ingrediente-container">
              <input type="text" class="ingrediente-input" name="ingredients" value="" placeholder="Ingrediente">            
            </div>
          </div>
          

          <button type="button" class="add-ingredient">Adicionar</button>
          {# <button type="button" class="send-ingredient">Enviar</button> #}

        </div>

        <div class="item">
          <div>Modo de preparo</div>
          <div id="prepare-mode" class="prepare-container">
            <input type="text" class="prepare-input" name="preparation" value="{{ dessert.preparation }}" placeholder="Instrução">
          </div>

          <button type="button" class="add-instro">Adicionar instrução</button>
        </div>

        <div class="item">
          <div>Informações adicionais (Opcional)</div>
          <div>
            <textarea type="text" name="information" value="{{ dessert.information }}" placeholder="Informações adicionais"></textarea>
          </div>
        </div>

        <button type="submit" id="save">Salvar receita</button>
      </section>
    </form>

  <script src="/scripts.js"></script>
  </body>


</html>