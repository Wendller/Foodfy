{% extends "layout.njk" %}

{% block head %}

    <title>Foodfy - Admin</title>
    <link rel="stylesheet" href="/css/foodesign.css">

{% endblock %}


{% block content %}
    <div id="gerenciar">
        <h3>Gerenciar receitas</h3>
        <a href="/admin/recipes/create">Adicionar receita</a>
    </div>

    <section class="index">

      {% for dessert in receipts %}
        <div class="index-item">
              <img 
                {% for file in files %}
                  {% if file.recipeid == dessert.id %}
                    src="{{ file.src }}" alt=""
                  {% endif %}
                {% endfor %}
              >
                 
          <div>
            <h2>{{ dessert.title }}</h2>
            <p>por {{ dessert.chef }}</p>
            <a href="/admin/recipes/{{ dessert.id }}">Visualizar</a>
          </div>
        </div>
      {% endfor %}

    </section>

    <script src="/script.js"></script>

{% endblock %}